        </rowConstraints>
         <children>
            <Button GridPane.halignment="CENTER" GridPane.valignment="CENTER" prefHeight="60.0" prefWidth="200.0" text="Kilépés" GridPane.rowIndex="2" onAction="#logout" />
            <Button GridPane.halignment="CENTER" GridPane.valignment="CENTER" prefHeight="60.0" prefWidth="200.0" text="Keresés" GridPane.rowIndex="1" onAction="#search" />
            <Button GridPane.halignment="CENTER" GridPane.valignment="CENTER" prefHeight="60.0" prefWidth="200.0" GridPane.rowIndex="0" text="Bejelentkezés" onAction="#login"/>
         </children>
      </GridPane>
   </children>
